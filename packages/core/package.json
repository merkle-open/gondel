{
	"name": "@gondel/core",
	"version": "1.2.8",
	"description": "The base core of the gondel library",
	"bugs": "https://github.com/merkle-open/gondel/issues",
	"homepage": "https://github.com/merkle-open/gondel",
	"repository": "https://github.com/merkle-open/gondel.git",
	"main": "./dist/gondel.es5.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"scripts": {
		"build": "npm-run-all build:*",
		"build:clean": "rimraf dist",
		"build:types": "tsc --project ./tsconfig.json --declaration --esModuleInterop --target es5 --declarationDir dist/ --sourceMap --outDir dist/",
		"build:rollup": "rollup -c rollup.config.mjs",
		"build:min": "rollup -c rollup.config.min.mjs",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"files": ["dist/"],
	"devDependencies": {
		"@types/jest": "28.1.8",
		"core-js": "3.45.1",
		"jest": "28.1.3",
		"jest-environment-jsdom": "28.1.3",
		"npm-run-all": "4.1.5",
		"rimraf": "6.0.1",
		"rollup": "4.52.4",
		"@rollup/plugin-terser": "0.4.4",
		"@rollup/plugin-node-resolve": "16.0.2",
		"ts-jest": "28.0.8",
		"tslib": "2.8.1",
		"typescript": "5.9.3"
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": true
			}
		},
		"transform": {
			"^.+\\.ts?$": "ts-jest"
		},
		"testRegex": "\\.test\\.ts$",
		"testEnvironment": "jsdom",
		"collectCoverage": true,
		"collectCoverageFrom": ["src/**/*.{ts,tsx,js,jsx}"],
		"coverageDirectory": "coverage",
		"moduleFileExtensions": ["ts", "js", "json", "node"],
		"preset": "ts-jest"
	}
}
