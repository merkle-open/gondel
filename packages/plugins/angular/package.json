{
  "name": "@gondel/plugin-angular",
  "version": "1.1.2",
  "description": "Gondel Plugin to boot angular widgets and apps",
  "bugs": "https://github.com/namics/gondel/issues",
  "homepage": "https://github.com/namics/gondel",
  "repository": "https://github.com/namics/gondel.git",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Jan Biasi",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build:clean": "rimraf dist",
    "build:esm": "tsc --project ./tsconfig.json --declaration --esModuleInterop --declarationDir dist/ --sourceMap --outDir dist/",
    "build": "npm-run-all build:clean build:esm"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "peerDependencies": {
    "@gondel/core": "*",
    "@angular/core": ">=8.0.0",
    "@angular/common": ">=8.0.0",
    "@angular/compiler": ">=8.0.0",
    "@angular/platform-browser": ">=8.0.0",
    "@angular/platform-browser-dynamic": ">=8.0.0",
    "zone.js": "*"
  },
  "devDependencies": {
    "@angular/core": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@gondel/core": "^1.1.0",
    "jest": "24.9.0",
    "jest-preset-angular": "8.0.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.0",
    "typescript": "3.7.4",
    "zone.js": "~0.9.1"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": ["<rootDir>/fixtures/setupJest.ts"],
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.test.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    },
    "transform": {
      "^.+\\.tsx?": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node",
      "html",
      "scss",
      "css"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/coverage"
    ]
  }
}
