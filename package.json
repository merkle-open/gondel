{
  "name": "gondel",
  "version": "0.0.3",
  "private": true,
  "description": "Gondel Monorepo",
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build",
    "clean": "lerna clean",
    "commit": "git-cz",
    "install": "lerna bootstrap --hoist",
    "prettier": "prettier --write **/src/*.{ts,tsx}",
    "posttest": "prettier --list-different **/src/*.{ts,tsx}",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "release": "lerna publish --ignore \"*-example\" --ignore \"@gondel/plugin-events\" --conventional-commits"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "conventional-changelog-lint -e"
    }
  },
  "lint-staged": {
    "**/src/**/*.(ts|tsx)": [
      "prettier --list-different"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "name": "@gondel/core",
      "limit": "3 KB",
      "path": "./packages/core/dist/index.js"
    },
    {
      "name": "@gondel/core es5",
      "limit": "3 KB",
      "path": "./packages/core/dist/gondel.es5.js"
    }
  ],
  "devDependencies": {
    "commitizen": "2.10.1",
    "conventional-changelog-lint": "2.1.1",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.0.0-rc.14",
    "lerna": "3.4.0",
    "lint-staged": "7.2.2",
    "prettier": "1.14.2",
    "standard-version": "4.4.0"
  }
}
